<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="">

    <center>
        <VBox alignment="CENTER" prefHeight="469.0" prefWidth="512.0" spacing="10" style="-fx-padding: 20;">

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Login" />

            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />

            <HBox spacing="10">
                <Button fx:id="loginButton" text="Login" />
                <Button fx:id="signUpButton" text="Sign Up" />
            </HBox>

            <Hyperlink fx:id="forgotPasswordLink" text="Forgot your Password?" />

            <HBox alignment="CENTER" spacing="15">
                <CheckBox text="Admin" fx:id="adminCheckBox" />
                <CheckBox text="Agent" fx:id="agentCheckBox" />
                <CheckBox text="Client" fx:id="clientCheckBox" />
            </HBox>

        </VBox>
    </center>
</BorderPane>
