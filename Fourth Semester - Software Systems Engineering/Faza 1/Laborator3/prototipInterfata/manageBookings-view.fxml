<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="">

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <Label text="Booking Details" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <TitledPane text="Client Details" expanded="true">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <TextField fx:id="clientNameField" promptText="Client Name" />
                    <TextField fx:id="clientEmailField" promptText="Client Email" />
                    <TextField fx:id="clientPhoneField" promptText="Client Phone" />
                </VBox>
            </TitledPane>

            <TitledPane text="Trip Details" expanded="true">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <TextField fx:id="destinationField" promptText="Destination" />
                    <TextField fx:id="transportCompanyField" promptText="Transport Company" />
                    <TextField fx:id="dateTimeField" promptText="Date and Time" />
                    <TextField fx:id="priceField" promptText="Price" />
                    <TextField fx:id="seatsField" promptText="Number of Seats" />
                </VBox>
            </TitledPane>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Book" fx:id="bookButton" />
                <Button text="Cancel Booking" fx:id="cancelButton" />
            </HBox>

        </VBox>
    </center>
</BorderPane>
