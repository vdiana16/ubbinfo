<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="344.0" prefWidth="410.0" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.client.controller.LoginController">

    <GridPane alignment="center" hgap="10" vgap="10" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

        <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>

        <!-- Header -->
        <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Login" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" />

        <!-- Username Field -->
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtUsername" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <!-- Password Field -->
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <PasswordField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <!-- Buttons -->
        <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
            <Button fx:id="btnLogIn" defaultButton="true" onAction="#handlePanelClicks" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Log In" />
            <Button fx:id="btnSignUp" onAction="#handlePanelClicks" style="-fx-background-color: #4CAF90; -fx-text-fill: white;" text="Sign Up" />
        </HBox>
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>

    </GridPane>
</AnchorPane>
